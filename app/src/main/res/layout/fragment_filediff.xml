<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diff_text_container">
        <TextView
            android:id="@+id/left_num"
            android:layout_width="@dimen/width_for_diff_num"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_for_diff"
            android:textAppearance="?attr/textAppearanceListItem"
            />

        <TextView
            android:id="@+id/left_string"
            android:layout_width="@dimen/width_for_diff_text"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_for_diff"
            android:textAppearance="?attr/textAppearanceListItem"
            android:scrollHorizontally="true"/>
        <TextView
            android:id="@+id/right_num"
            android:layout_width="@dimen/width_for_diff_num"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_for_diff"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/right_string"
            android:layout_width="@dimen/width_for_diff_text"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_for_diff"
            android:textAppearance="?attr/textAppearanceListItem"
            android:scrollHorizontally="true"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/file_header"
        android:layout_margin="@dimen/text_margin"/>
</LinearLayout>
